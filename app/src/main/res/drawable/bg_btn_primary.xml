<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
>

    <item android:state_enabled="true">
        <ripple
            android:color="@color/blueDark">

            <item android:id="@android:id/mask">
                <shape >
                    <solid android:color="@color/blueMed"/>
                    <corners android:radius="@dimen/_8sdp"/>
                    <stroke android:color="@color/blueDark" android:width="1dp"/>
                </shape>
            </item>

            <item android:id="@android:id/background">
                <shape >
                    <solid android:color="@color/blueDark"/>
                    <corners android:radius="@dimen/_8sdp"/>
                    <stroke android:color="@color/blueDark" android:width="1dp"/>

                </shape>
            </item>



        </ripple>
    </item>

    <item android:state_enabled="false">
        <ripple
            android:color="@color/grayMed">

            <item android:id="@android:id/mask">
                <shape >
                    <solid android:color="@color/blueMed"/>
                    <corners android:radius="@dimen/_8sdp"/>
                    <stroke android:color="@color/grayMed" android:width="1dp"/>
                </shape>
            </item>

            <item android:id="@android:id/background">
                <shape >
                    <solid android:color="@color/grayMed"/>
                    <corners android:radius="@dimen/_8sdp"/>
                    <stroke android:color="@color/grayMed" android:width="1dp"/>

                </shape>
            </item>



        </ripple>
    </item>


</selector>
